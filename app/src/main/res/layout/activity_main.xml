<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textMessage"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter message"
        android:inputType="textPersonName"
        />


    <Button
        android:id="@+id/publishMessage"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Publish"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/unSubscribeTopic"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:hint="Unsubscribe topic"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/unSubscribe"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/subscribeTopic"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:hint="Subscribe topic"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/subscribe"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/subscribe"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:text="Subscribe"
        android:layout_below="@+id/publishMessage"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/unSubscribe"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="UnSubscribe"
        android:layout_below="@+id/subscribe"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
